{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1> EGGS VERSUS HUMANS</h1>
            </div>
        </div>
    </div>
    {% if joueur1  %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1> Battle </h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {{ joueur1.name }}/{{ joueur1.species }}
                {{ joueur1.caliber }}
                <hr>

                <h1>PLAYER 1</h1>
                <form action="Fight/index" method="post">
                    <input type="submit" name="submit" value="Joueur 1">
                </form>

                <img src="{{ joueur1.image }}" width="300px" height="380px">
            </div>
            <div class="col-md-2" p-3>
                <p> Element choisi lors du combat</p>
            </div>
            <div class="col-md-4">
                {{ joueur2.name }}/{{ joueur2.species }}
                {{ joueur2.caliber }}
                <hr>

                <h1>PLAYER 2</h1>
                <form action="Fight/char" method="post">
                    <input type="submit" name="submit" value="Joueur 2">
                </form>

                <img src="{{ joueur2.image }}" width="300px" height="380px">
            </div>
        </div>
    </div>
    <hr>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                    <a href="http://localhost:8000/Game/setAttack" class="btn btn-primary">Attack</a>
                    <button type="button" class="btn btn-danger">Attack</button>
                    <button type="button" class="btn btn-success">Heal</button>
                    <button type="button" class="btn btn-info">Protect</button>
                    <button type="button" class="btn btn-secondary">Nothing</button>
                </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-danger">Attack</button>
                <button type="button" class="btn btn-success">Heal</button>
                <button type="button" class="btn btn-info">Protect</button>
                <button type="button" class="btn btn-secondary">Nothing</button>
            </div>
            </div>
        </div>
    </div>
    {% else  %}

    <div class="container p-5">
        <div class="row">
            {% for joueurOeuf in joueursOeufs %}
            <div class="col-md-3">
                <div class="card">
                    <img src="{{ joueurOeuf.image }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ joueurOeuf.name }}</h5>
                        <p class="card-text">Attack, Hp, {{ joueurOeuf.caliber }}</p>
                        <a href="http://localhost:8000/Fight/index/{{joueurOeuf.id}}" class="btn btn-primary">SÃ©lectionner</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif  %}
    

{% endblock %}
